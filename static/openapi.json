{
  "openapi" : "3.0.0",
  "info" : {
    "title" : "Bonjwa Schedule API",
    "description" : "Publishes the bonjwa schedule as an API",
    "license" : {
      "name" : "Apache 2.0",
      "url" : "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version" : "1.0.0"
  },

  "paths" : {
    "/schedule" : {
      "get" : {
        "summary" : "Returns the full schedule",
        "operationId" : "schedule",
        "responses" : {
          "200" : {
            "description" : "full schedule",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/ScheduleItem"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/events" : {
      "get" : {
        "summary" : "Returns upcoming events",
        "operationId" : "events",
        "responses" : {
          "200" : {
            "description" : "upcoming events",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/EventItem"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "ScheduleItem" : {
        "required" : [ "endDate", "startDate", "title" ],
        "type" : "object",
        "properties" : {
          "title" : {
            "type" : "string",
            "example" : "Pog oder Block"
          },
          "caster" : {
            "type" : "string",
            "example" : "Matteo"
          },
          "startDate" : {
            "type" : "string",
            "format" : "date-time",
            "example" : "2019-11-19T11:00:00Z"
          },
          "endDate" : {
            "type" : "string",
            "format" : "date-time",
            "example" : "2019-11-19T13:00:00Z"
          },
          "cancelled" : {
            "type" : "boolean",
            "example" : false
          }
        }
      },
      "EventItem" : {
        "required" : [ "title", "date" ],
        "type" : "object",
        "properties" : {
          "title" : {
            "type" : "string",
            "example" : "Community-Treffen 2020"
          },
          "date" : {
            "type" : "string",
            "example" : "14. November"
          }
        }
      }
    }
  }
}
